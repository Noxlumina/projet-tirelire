@model TireLire.Models.Commentaire

@{
    ViewBag.Title = "Dépos.Avis";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>
            Déposer un avis 
        </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("IdProduit")
        @Html.Hidden("IdClient")
        @Html.Hidden("Date_Avis")
        @Html.Hidden("Etat")

        

        <div class="form-group">
            @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                @*@Html.DropDownListFor(model => model.Note, new SelectList(ViewBag.List), "attribuer votre note", new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Commentaire1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Commentaire1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Commentaire1, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Valider" class="btn btn-outline-success" />
            </div>
        </div>
</div>
    }

<div>
    @Html.ActionLink("Retour au listing des produits", "Index", "", new { style = "color:darkgreen;", @class = "text-decoration-none" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
