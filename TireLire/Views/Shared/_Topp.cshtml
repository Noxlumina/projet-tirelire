@model TireLire.Outils.TotalListVH

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Topp</title>
</head>
<body>

    <h2>Top 5 des produits</h2>


    <ol>
        @for (int i = 0; i < 3; i++)
        {
            <li>
                <div style="display:inline-block;margin:20px;">
                    @Html.DisplayFor(m => m.ListIds[i].NomProduit)

                    <a href="~/Produit/Details/@Model.ListIds[i].IdProd">
                        <img src="@Url.Content("~/Images/" + Model.ListIds[i].IdProd + "_" + Model.ListIds[i].url)" width="100" />
                    </a>
                </div>

                @Html.DisplayFor(m => m.ListIds[i].Total)

            </li>
        }
    </ol>

</body>
</html>
