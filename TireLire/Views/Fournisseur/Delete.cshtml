@model TireLire.Models.Fournisseur

@{
    ViewBag.Title = "Suppr.Fournisseur";
}


<h3>Supression du fournisseur</h3>

<div>
    <h4>Voulez-vous vraiment supprimer ce fournisseur?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Statut)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Statut)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-outline-danger" />
        </div>
        <div>
            <br />
            @Html.ActionLink("Retour au listing des fournisseur", "Index", "", new { style = "color:darkgreen;", @class="text-decoration-none"})
        </div>
    }
</div>
